<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="2000.0" maxWidth="1200.0"
	style="-fx-background-color: white;"
	xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="fxml.WebsiteTemplateController">
	<top>
		<VBox spacing="10"
			style="-fx-background-color: lightblue; -fx-padding: 10;">
			<Label style="-fx-font-size: 24; -fx-text-fill: darkblue;"
				text="YOUR UNC'S CLOTHING" />
		</VBox>
	</top>
	<left>
		<VBox prefHeight="222.0" prefWidth="106.0" spacing="10"
			style="-fx-padding: 10; -fx-background-color: #f0f0f0;">
			<Button prefHeight="38.0" prefWidth="85.0"
				style="-fx-font-size: 16;" text="Home" />
			<Button onAction="#switchToProductsPage" prefHeight="37.0"
				prefWidth="85.0" style="-fx-font-size: 16;" text="Products" />
			<Button onAction="#switchToAboutPage" prefWidth="85.0"
				style="-fx-font-size: 16;" text="About" />
			<Button onAction="#switchToContactPage" prefWidth="85.0"
				style="-fx-font-size: 16;" text="Contact" />
		</VBox>
	</left>
	<center>
		<VBox prefHeight="2000.0" prefWidth="2000.0" spacing="20"
			style="-fx-padding: 20;">
			<Text style="-fx-font-size: 45; -fx-font-weight: bold;"
				text="Welcome" />
			<Rectangle fill="lightgray" height="607.0" stroke="black"
				strokeWidth="2" width="1037.0" />
			<ScrollBar orientation="VERTICAL" />
		</VBox>
	</center>
</BorderPane>
